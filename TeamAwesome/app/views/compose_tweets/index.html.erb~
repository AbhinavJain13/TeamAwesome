<% @timeline.each do |tweet| %>
  <tr>
      <td><img src = " <%= tweet.user.profile_image_url %> " /></td>
      <td><%= auto_link(tweet.full_text).html_safe %></td>
      <% @compose_tweet.each do |compose| %>
        <% if (compose.id == tweet.id) %>
          <% @author=compose.author %>
        <% end %>
      <% end %>
      <td><%= @author %></td>
      <% @author="?" %>
  </tr>
<% end %>
</table>
